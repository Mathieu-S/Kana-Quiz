{
  "compilerOptions": {
    "rootDir": "./src/js/",
    "outDir": "./assets/js/",
    "sourceMap": true,
    "declaration": false, // Generate d.ts
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "experimentalDecorators": false, // ES7
    "emitDecoratorMetadata": false, // ES7
    "noStrictGenericChecks": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "lib": ["dom", "es5", "scripthost", "es2015.promise"],
    "types": ["jest", "node", "webpack-env"],
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["node_modules", "dist"]
}
