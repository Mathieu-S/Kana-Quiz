{
  "name": "ms-wtpcss",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "main": "index.ts",
  "scripts": {
    "dev": "webpack-dev-server --mode development --open --config ./webpack.config.js --env.env=dev",
    "build:prod:bundleVisualizer": "npm run build -- --progress --profile --env.addons=bundleVisualizer",
    "build:prod:bundleAnalyzer": "npm run build -- --env.addons=bundleAnalizer",
    "build:prod:stats": "npm run build -- --progress --profile --json > ./dist/stats/stats.json",
    "build:prod": "webpack --mode production --config ./webpack.config.js --env.env=prod",
    "debug:prod": "npm run debug -- --env.env=prod",
    "debug": "node --inspect-brk ./node_modules/webpack/bin/webpack.js --config ./webpack.config.js",
    "lint": "tslint -c tslint.json 'app/**/*.ts' --exclude 'app/**/*.d.ts'",
    "stats": "npm run build:prod:bundleAnalyzer",
    "test": "jest --env=jsdom"
  },
  "devDependencies": {
    "@types/jest": "26.0.14",
    "@types/node": "14.11.2",
    "@types/webpack-env": "1.15.3",
    "@tailwindcss/custom-forms": "^0.2.1",
    "autoprefixer": "10.0.1",
    "compression-webpack-plugin": "6.0.2",
    "copy-webpack-plugin": "6.1.1",
    "css-loader": "4.3.0",
    "css-modules-typescript-loader": "4.0.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "fork-ts-checker-webpack-plugin": "5.2.0",
    "html-webpack-plugin": "4.5.0",
    "jest": "26.4.2",
    "lint-staged": "10.4.0",
    "mini-css-extract-plugin": "0.11.2",
    "postcss-custom-properties": "10.0.0",
    "postcss-csso": "^4.0.0",
    "postcss-fixes": "^2.0.1",
    "postcss-import": "12.0.1",
    "postcss-loader": "4.0.2",
    "postcss-nesting": "7.0.1",
    "source-map-loader": "1.1.0",
    "style-loader": "1.2.1",
    "stylelint": "13.7.2",
    "tailwindcss": "^1.8.10",
    "ts-jest": "26.4.1",
    "ts-loader": "8.0.4",
    "tslint": "6.1.3",
    "tslint-config-prettier": "1.18.0",
    "typescript": "4.0.3",
    "uglifyjs-webpack-plugin": "2.2.0",
    "webpack": "4.44.2",
    "webpack-bundle-analyzer": "3.9.0",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0",
    "webpack-visualizer-plugin": "0.1.11"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/unit/__mocks__/fileMock.js",
      "\\.(css)$": "identity-obj-proxy"
    },
    "setupFiles": [
      "<rootDir>/test/setup/setupTests.ts"
    ],
    "testURL": "http://localhost",
    "testEnvironment": "node"
  }
}